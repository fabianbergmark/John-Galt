extends layout

block content
  div.container
    div.page-header
      center
        h1 John Galt
      a(href="#cloudModal", data-toggle="modal")
        div#cloud
          p 0
    br
    br
    div.row
      div.span3
        button#start.btn.btn-large.btn-block.btn-success Start
      div.span3
        button#stop.btn.btn-large.btn-block.btn-danger Stop
      div.span3
        button#attack.btn.btn-large.btn-block.btn-inverse Attack
      div.span3
        a(href="#sheduleModal", data-toggle="modal")
          button#shedule.btn.btn-large.btn-block.btn-primary Shedule
    br
    div.row
      div.span12
        div#console.well
          div.row-fluid
            div.span10
              div#text
              div.row-fluid#commandline
                div.span12
                  div.input-prepend
                    span.add-on $>
                    input(type='text')#line
            div.span2
              table#status.table
                thead
                  th Status
    div.row#lists
      div.span2
        table#cards.table.table-hover.table-condensed
          thead
            th Cards
      div.span3
        table#rooms.table.table-hover.table-condensed
          thead
            th Rooms
      div.span3
        table#yellow.table.table-hover.table-condensed
          thead
            th Unconfirmed
      div.span3
        table#booked.table.table-hover-table-condensed
          thead
            th Booked
    div.modal.hide.fade#cloudModal(role="dialog", tabindex="-1", role="dialog", aria-hidden="true")
      div.modal-header
        button(type="button", class="close", data-dismiss="modal", aria-hidden="true")&times;
        h3 Clouds
      div.modal-body
        ul
        form.form-horizontal
          div.control-group
            label.control-label(for="name") Name
            div.controls
              input(type="text", name="name", placeholder="Name")
      div.modal-footer
        div.btn(data-dismiss="modal", aria-hidden="true") close
    div.modal.hide.fade#sheduleModal(role="dialog", tabindex="-1", role="dialog", aria-hidden="true")
      div.modal-header
        button(type="button", class="close", data-dismiss="modal", aria-hidden="true")&times;
        h3 Shedule booking
      div.modal-body
        div.alert.alert-error.hide#error
          button.close(type="button")#close&times;
          strong
          p
        div.row-fluid
          div.span1.offset1#backward
            div.pull-left
              &#8592;
          div.span4.offset2
            center
              strong#date
          div.span1.offset2#forward
            div.pull-right
              &#8594;
        table.table.table-condensed.table-bordered#calendar
          thead
            th Rum
            th 08:00
            th 10:00
            th 12:00
            th 13:00
            th 15:00
            th 17:00
          tbody
            tr#Grp01
              td 1. Leibnitz
            tr#Grp02
              td 2.Pascal
            tr#Grp03
              td 3.Scheele
            tr#Grp04
              td 4. Leopold
            tr#Grp05
              td 5. Agricola
            tr#Grp06
              td 6. Bernoulli
            tr#Grp07
              td 7. DÃ¼rer
            tr#Grp08
              td 8. Galvani
            tr#Grp09
              td 9. Mikroskopet
            tr#Grp10
              td 10. Teleskopet
            tr#Grp11
              td 11. Watt
            tr#Grp12
              td 12. Santorio
            tr#Grp13
              td 13. N Galleriet
      div.modal-footer
        div.btn#submit submit
        div.btn(data-dismiss="modal", aria-hidden="true")#close close
